//}

.line-rect {
  fill: black;
  opacity: 0;

  &:hover {
    opacity 1;
  }
}

.bar {
  fill: steelblue;
}

.bar:hover {
  fill: brown;
}

.axis {
  font: 10px sans-serif;
}

.axis path,
.axis line {
  fill: none;
  stroke: #000;
  shape-rendering: crispEdges;
}